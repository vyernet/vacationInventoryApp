<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditVacationActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editTextVacationTitleDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vacation Title"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextVacationHotelDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hotel Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextVacationStartDateDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start Date (MM/dd/yyyy)"
            android:focusable="false"
            android:cursorVisible="false"
            android:clickable="true"
            android:inputType="date" />

        <EditText
            android:id="@+id/editTextVacationEndDateDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Date (MM/dd/yyyy)"
            android:focusable="false"
            android:cursorVisible="false"
            android:clickable="true"
            android:inputType="date" />

        <Button
            android:id="@+id/buttonSaveChangesVacation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Save Changes" />

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </FrameLayout>

        <include
            layout="@layout/button_nav_bar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>